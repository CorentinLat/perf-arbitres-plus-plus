{
  "productName": "PerfArbitresPlusPlus",
  "appId": "fr.corentinlat.perf-arbitres-plus-plus",
  "asar": false,
  "asarUnpack": "**\\*.{node,dll}",
  "files": [
    "dist",
    "node_modules",
    "package.json"
  ],
  "afterSign": ".erb/scripts/notarize.js",
  "mac": {
    "target": {
      "target": "zip",
      "arch": ["x64"]
    },
    "category": "public.app-category.sports",
    "type": "distribution",
    "hardenedRuntime": true,
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "gatekeeperAssess": false
  },
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "language": "040C"
  },
  "linux": {
    "target": "AppImage",
    "category": "Development"
  },
  "directories": {
    "app": "release/app",
    "buildResources": "assets",
    "output": "release/build"
  },
  "extraResources": [
    "./assets/**"
  ],
  "publish": {
    "provider": "github",
    "owner": "corentin.latappy",
    "repo": "perf-arbitres-plus-plus"
  }
}
